Ext.define('AddressBook.model.Contact', {
	extend : 'AddressBook.model.Base',
	// extend : 'Ext.data.Model',

	fields : [{
		name : 'contact_id',
		type : 'auto'
	}, {
		name : 'first_name'
	}, {
		name : 'last_name'
	}, {
		name : 'full_name',
		convert : function(v, record) {
			return record.get('first_name') + " " + record.get('last_name');
		},
		depends : ['last_name', 'first_name']
	}, {
		name : 'dob',
		type : 'date',
		dateFormat : 'Y-m-d'
	}],

	idProperty : 'id',
	
	proxy : {
		type : 'rest',
		url : 'contacts',
		// actionMethods : {
			// create : 'POST',
			// read : 'POST',
			// update : 'POST',
			// destroy : 'POST'
		// },
// 		
		// api : {
			// read : 'data/contactList.php',
			// create : 'data/addContact.php',
			// update : 'data/editContact.php',
			// destroy : 'data/deleteContact.php'
		// },


		reader : {
			type : 'json',
			rootProperty : 'contacts',
			successProperty : 'success'
		}
	}
});

